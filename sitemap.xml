---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">
  
  <!-- Homepage -->
  <url>
    <loc>{{ site.url }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>

  <!-- Service Pages -->
  <url>
    <loc>{{ site.url }}/zendesk-migration</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.9</priority>
  </url>
  
  <url>
    <loc>{{ site.url }}/zendesk-integration</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.9</priority>
  </url>
  
  <url>
    <loc>{{ site.url }}/customer-experience-automation</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.9</priority>
  </url>
  
  <url>
    <loc>{{ site.url }}/zendesk-applications</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.9</priority>
  </url>

  <!-- Resources Section -->
  <url>
    <loc>{{ site.url }}/resources</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.8</priority>
  </url>

  <!-- Static Pages -->
  {% for page in site.pages %}
    {% unless page.url contains '/404' or page.url contains '/assets/' or page.url contains '/_' %}
      {% if page.layout == 'page' %}
        <url>
          <loc>{{ site.url }}{{ page.url | remove: 'index.html' }}</loc>
          <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
          <changefreq>monthly</changefreq>
          <priority>0.7</priority>
        </url>
      {% endif %}
    {% endunless %}
  {% endfor %}

  <!-- Portfolio Items -->
  {% for post in site.portfolio %}
    <url>
      <loc>{{ site.url }}{{ post.url }}</loc>
      <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
      <changefreq>yearly</changefreq>
      <priority>0.5</priority>
    </url>
  {% endfor %}

</urlset>